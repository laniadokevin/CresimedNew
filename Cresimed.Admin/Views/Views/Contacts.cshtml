
@using System.Security.Claims;
@using Cresimed.Core.Entities.Database
@using Cresimed.Core.Entities.ViewModel.Admin.Edition
@model ContactViewViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = User.FindFirst(ClaimTypes.Name).Value;
}

        <!-- partial -->

        <div class="main-panel">
    <div class="content-wrapper">
               <h1 class="h1">Contact #@Model.Contact.ContactID</h1>
            
            <div class="row" style="border: 1px solid #2c2e33 ">
        <div class="card">
            
                  <div class="modal-body">
                        <div class="form-group">
                            <label >Name: 

                            @Html.DisplayFor(m => m.Contact.Name, new { @maxlength = "500", @class="form-control", @placeholder="Subject" })
                            </label>

                    </div>
                    <div class="form-group">
                        <label>
                            Lastname:

                            @Html.DisplayFor(m => m.Contact.Lastname, new { @maxlength = "4000", @class="form-control", @placeholder="Question" })
                        </label>

                    </div>
                    <div class="form-group">
                        <label>
                            Email:

                            @Html.DisplayFor(m => m.Contact.Email, new { @maxlength = "4000", @class="form-control", @placeholder="Answer" })
                        </label>

                    </div>
                    <div class="form-group">
                        <label>
                            Country:

                            @Html.DisplayFor(m => m.Contact.Country, new { @maxlength = "4000", @class="form-control", @placeholder="Question" })
                        </label>

                    </div>
                    <div class="form-group">
                        <label>
                            Subject:

                            @Html.DisplayFor(m => m.Contact.Subject, new { @maxlength = "4000", @class="form-control", @placeholder="Answer" })
                        </label>

                    </div>
                    <div class="form-group">
                        <label>
                            Message:

                            @Html.DisplayFor(m => m.Contact.Message, new { @maxlength = "4000", @class="form-control", @placeholder="Question" })
                        </label>

                    </div>
                  </div>
                  <div class="modal-footer" style="border:none!important;">
                    <a class="btn btn-secondary" href="@Url.Action("Contacts","Grids")" >
                        <i class="mdi mdi-keyboard-backspace"> </i>
                    </a>
                    
                    
                  </div>
            </div>
          </div>
          </div>
          </div>
          <!-- content-wrapper ends -->

    @section Scripts {

    <!-- plugins:js -->
    <script src="~/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/vendors/chart.js/Chart.min.js"></script>
    <script src="~/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="~/vendors/jvectormap/jquery-jvectormap.min.js"></script>
    <script src="~/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/vendors/owl-carousel-2/owl.carousel.min.js"></script>
    <script src="~/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/hoverable-collapse.js"></script>
    <script src="~/js/misc.js"></script>
    <script src="~/js/settings.js"></script>
    <script src="~/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/js/dashboard.js"></script>
    <!-- End custom js for this page -->
  
    }