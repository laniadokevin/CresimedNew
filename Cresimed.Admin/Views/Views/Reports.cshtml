
@using System.Security.Claims;
@using Cresimed.Core.Entities.Database
@using Cresimed.Core.Entities.Enum
@using Cresimed.Core.Entities.ViewModel.Admin.Edition
@model ReportViewViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = User.FindFirst(ClaimTypes.Name).Value;
}

        <!-- partial -->

        <div class="main-panel">
          <div class="content-wrapper">
               <h1 class="h1">Report #@Model.Report.ReportID</h1>
            
            <div class="row" style="border: 1px solid #2c2e33 ">
            
                  <div class="modal-body">
                        <div class="form-group">
                    <label>Type:
                        @switch (Model.Report.Type)
                        {
                            case (int)ReportQuestionType.Otro:
                                @Html.Raw("Otro")
                                break;
                            case (int)ReportQuestionType.RedacciónYOrtografía:
                                @Html.Raw("Redacción y Ortografía")
                                break;
                            case (int)ReportQuestionType.ErrorEnLaPregunta:
                                @Html.Raw("Error En Pregunta")
                                break;
                            case (int)ReportQuestionType.RespuestaIncorrecta:
                                @Html.Raw("Respuesta Incorrecta")
                                break;
                            case (int)ReportQuestionType.ExplicaciónIncorrecta:
                                @Html.Raw("Explicación Incorrecta")
                                break;
                            case (int)ReportQuestionType.ProblemaEnLaImagen:
                                @Html.Raw("Problema En Imagen")
                                break;
                            case (int)ReportQuestionType.ProblemaTécnico:
                                @Html.Raw("Problema Tecnico")
                                break;
                            default:
                                break;

                        }
                    </label>    
                    
                        </div>
                        <div class="form-group">
                            <label >Question</label>
                            @Html.DisplayFor(m => m.Report.Type, new { @maxlength = "4000", @class="form-control", @placeholder="Question" })
                    
                        </div>
                        <div class="form-group">
                            <label >Answer</label>
                            @Html.DisplayFor(m => m.Report.QuestionID, new { @maxlength = "4000", @class="form-control", @placeholder="Answer" })
                    
                        </div>



                public int Type {get;set;}
                public int QuestionID {get;set;}
                public int UserID {get;set;}
                public string Message { get; set; }
                  </div>
                  <div class="modal-footer" style="border:none!important;">
                    <a class="btn btn-secondary" href="@Url.Action("Reports","Grids")" >
                        <i class="mdi mdi-keyboard-backspace"> </i>
                    </a>
                    
                    <button type="submit" class="btn btn-primary" >
                        <i class="mdi mdi-content-save"> </i>
                    </button>
                  </div>
                
            </div>
          </div>
          </div>
          <!-- content-wrapper ends -->

    @section Scripts {

    <!-- plugins:js -->
    <script src="~/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/vendors/chart.js/Chart.min.js"></script>
    <script src="~/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="~/vendors/jvectormap/jquery-jvectormap.min.js"></script>
    <script src="~/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/vendors/owl-carousel-2/owl.carousel.min.js"></script>
    <script src="~/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/hoverable-collapse.js"></script>
    <script src="~/js/misc.js"></script>
    <script src="~/js/settings.js"></script>
    <script src="~/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/js/dashboard.js"></script>
    <!-- End custom js for this page -->
  
    }